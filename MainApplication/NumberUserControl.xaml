<UserControl x:Class="MainApplication.NumberUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApplication"
             mc:Ignorable="d" d:DesignWidth="500" Height="100">
    <Grid>
        <Button Click="clickMe_Click" Name="clickMe" Content="Click Me" Margin="216,0,0,0" />
        <TextBox HorizontalAlignment="Left" Name="txtNumber" Height="80" TextChanged="txtNumber_TextChanged" Margin="10,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="201"/>
    </Grid>
</UserControl>
